{
  "env": {
    "cypress/globals": true
  },
  "extends": ["../../.eslintrc.json"],
  "overrides": [
    {
      "files": ["integration/*.test.js"],
      "rules": {
        "jest/valid-expect-in-promise": "off"
      }
    }
  ],
  "parserOptions": {
    "babelOptions": {
      "configFile": "./.babelrc"
    },
    "ecmaVersion": 6
  },
  "plugins": ["cypress"]
}
