{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "@codeyourfuture/standard",
    "plugin:jest/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "rules": {
    "max-len": ["error", 120],
    "jest/expect-expect": "off",
    "jest/no-focused-tests": "error",
    "jest/no-disabled-tests": "error"
  }
}
