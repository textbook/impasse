{
  "name": "impasse",
  "version": "0.1.0",
  "description": "Generate moderately secure passwords",
  "private": true,
  "scripts": {
    "prebuild": "npm run cleanup",
    "build": "npm run build:server && npm run build:client",
    "build:client": "webpack --config client/webpack/prod.config.js",
    "build:server": "babel server --out-dir dist --ignore \"**/*.test.js\"",
    "cleanup": "rimraf ./dist/*",
    "predev": "npm run cleanup",
    "dev": "concurrently -k -n \"client,build,serve\" \"npm run dev:client\" \"npm run dev:build\" \"npm run dev:serve\"",
    "dev:build": "npm run build:server -- --source-maps --watch",
    "dev:client": "webpack serve --config client/webpack/dev.config.js",
    "dev:serve": "wait-on -l file:dist/server.js && cross-env PORT=3100 nodemon dist/server.js --watch dist",
    "predocker": "docker build . -t textbook/impasse",
    "docker": "docker run -e NODE_ENV=development -p 3000:80 textbook/impasse",
    "e2e": "concurrently -k -s first -n \"app,e2e\" \"npm run serve\" \"npm run e2e:safe\"",
    "e2e:dev": "cypress open",
    "e2e:docker": "concurrently -k -s first -n \"app,e2e\" \"npm run docker\" \"npm run e2e:safe\"",
    "e2e:run": "cypress run",
    "e2e:safe": "wait-on -l http-get://localhost:3000 && npm run e2e:run",
    "lint": "eslint .",
    "preserve": "npm run build",
    "serve": "npm start",
    "ship": "npm run lint && npm run test && npm run e2e",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/textbook/impasse.git"
  },
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/textbook/impasse/issues"
  },
  "homepage": "https://github.com/textbook/impasse#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@codeyourfuture/eslint-config-standard": "^2.0.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^9.3.0",
    "axe-core": "^3.4.0",
    "axios": "^0.20.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "bulma": "^0.8.0",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^5.0.0",
    "cypress": "^4.0.1",
    "cypress-axe": "^0.5.1",
    "cypress-multi-reporters": "^1.2.3",
    "eslint": "^6.6.0",
    "eslint-plugin-cypress": "^2.7.0",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^4.1.2",
    "file-loader": "^6.1.1",
    "html-webpack-plugin": "^4.5.0",
    "html-webpack-tags-plugin": "^2.0.17",
    "jest": "^26.6.0",
    "jest-junit": "^9.0.0",
    "mocha": "^6.2.2",
    "mocha-junit-reporter": "^2.0.0",
    "nock": "^11.7.0",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.5",
    "prop-types": "^15.7.2",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^2.0.0",
    "supertest": "^5.0.0",
    "wait-on": "^3.3.0",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.7.2",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "morgan": "^1.9.1",
    "word-list": "^3.1.0"
  },
  "engines": {
    "node": "12.19.0",
    "npm": "6.14.8"
  }
}
